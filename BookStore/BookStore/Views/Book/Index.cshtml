@model IEnumerable<BookStore.Entities.Book>    

<section>      
    <div class="container">
        <div style="text-align:center">
            <h1>  Book  </h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-12">
                <a asp-action="Create" class="btn btn-warning m-3" style="float:right">
                    <i class="fas fa-plus-circle"></i> &nbsp; Create
                </a>
            </div>
        </div>

        <h3>All Books</h3>

        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        Year Of Issue
                    </th>
                    <th>
                        Publisher
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var book in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => book.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => book.AuthorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => book.YearOfIssue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => book.PublisherName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => book.CategoryName)
                        </td>
                        <td>
                            <div class="row mt-3">
                                <div class="col-12 col-md-12 text-center">
                                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-secondary btn-block">
                                        <i class="fas fa-edit"></i> &nbsp; Edit
                                    </a>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12 col-md-12">
                                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-info btn-block">
                                        <i class="fas fa-info"></i> &nbsp; Details
                                    </a>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12 col-md-12">
                                    <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger btn-block">
                                        <i class="fas fa-trash"></i> &nbsp; Delete
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>

                 }
            </tbody>
        </table>


